<h2>新規会員登録</h2>

<%= form_with model: @user, url: user_registration_path, local: true  do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <table class="user_info">
    <thead>
      <th></th>
      <th></th>
    </thead>
    <tbody>
      <tr>
        <td><%= f.label :name, "ニックネーム", class: "user_name" %></td>
        <td><%= f.text_field :name, autofocus: true, :placeholder => "ニックネーム" %></td>
      </tr>
      <tr>
        <td><%= f.label :email, "メールアドレス" %></td>
        <td><%= f.email_field :email, autocomplete: "email" %></td>
      </tr>
      <tr>
        <td>
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
        </td>
        <td>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </td>
      </tr>
      <tr>
        <td><%= f.label :password_confirmation, "パスワード確認用" %></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
      </tr>
    </tbody>
  </table>
<% end %>

<%= render "devise/shared/links" %>
